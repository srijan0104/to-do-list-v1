  <div class="item">
    <input type="checkbox" autocomplete="off">
    <p>
    <%= newListItems[i].name %>
  </p>
</div>


      <% } %>-->


    <form class="item" action="/" method="post">
      <input type="text" name="fname" placeholder="New Item" autocomplete="off">
      <button class="n" type="submit" name="list" value="<%= kindOfDay %>">+</button>


    </form>


  </div>






</body>

</html>
